mixin page_feedback(data)
	section.page-content
		header.page-content-header
			h1 Электронное обращение

		div.tabs.js-tabs
			ul.tabs-handles
				li.tabs-handles-item.tabs-handles-item_active
					a(href="#physic").js-tabs-handle
