				li.tabs-handles-item
					a(href="#uri").js-tabs-handle
						| Юридическое лицо


			div.tabs-contents
				div.tab-contents-item.js-tabs-item#js-tab-physic
					form.form(action="")#feedback-form
						fieldset.form-fieldset
							h2 Заявитель
							.row.row-9.form-row
								.column.large-3.small-3
									.form-wrap
										label(for="surname").required Фамилия
										input.form-text#surname(type="text", name="surname", required)
								.column.large-3.small-3
									.form-wrap
										label(for="name").required Имя
										input.form-text#name(type="text", name="name", required)
								.column.large-3.small-3
									.form-wrap
										label(for="patronym").required Отчество
										input.form-text#patronym(type="text", name="patronym", required)
						fieldset.form-fieldset
							h2 Место жительства
							.row.row-9.form-row
								.column.large-6.small-6
									.form-wrap
										label(for="subject").required Субъект Российской Федерации
										select.form-select.js-select#subject(data-menuclass="form-select-6", required)
											option 1
											option 2
											option 3
											option 1
											option 2
											option 3
											option 1
											option 2
											option 3
											option 1
											option 2
											option 3
											option 1
