include ../modules/head/head
include ../modules/footer/footer
include ../modules/header/header
include ../modules/navigation2/navigation2
include ../modules/news-main/news-main
include ../modules/anons/anons
include ../modules/anons-news/anons-news
include ../modules/anons-docs/anons-docs
include ../modules/banners/banners

head
		+head(head.defaults)

block vars

body.page(class= (special == true) ? "special" : "")
		block special_pane
		div.page__wrapper
				div.page__inside
						+header
				div.page__navigation-wrapper
						div.page__inside
								+navigation2(navigation.default)
				div.page__inside
						.row.page__body
								.column.large-9.small-9.page__left
									+news-main
									+anons-news
									+anons-docs


								.column.large-3.small-3.page__right
									+anons(anons.important)
									+anons(anons.anons)
									+anons(anons.comment)


						+banners(banners.default)

				.page__buffer

		+footer

		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=staticPrefix=%js/separate-js/jquery-latest.min.js')
		script(src='%=staticPrefix=%js/main%=hash=%%=min=%.js')
		script(src='%=staticPrefix=%js/separate-js/script.js')
